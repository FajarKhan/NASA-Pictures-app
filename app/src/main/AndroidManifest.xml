<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fajarkhan.nasapicapp">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/nasa_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nasa_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.NASAPicturesApp">
        <activity
            android:name=".view.PictureListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.PictureDetailActivity"/>

    </application>



</manifest>